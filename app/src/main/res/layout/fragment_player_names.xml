<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.fragments.PlayerNamesFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacingMedium"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        android:transitionName="appName" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPlayer1Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMedium"
        android:layout_marginEnd="@dimen/spacingMedium">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPlayer1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/hint_player_1_name"
            android:padding="@dimen/spacing10"
            tools:text="Player 1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPlayer2Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMedium"
        android:layout_marginEnd="@dimen/spacingMedium">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPlayer2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/hint_player_2_name"
            android:padding="@dimen/spacing10"
            tools:text="Player 2" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStartGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacingMedium"
        android:layout_marginEnd="@dimen/spacingMedium"
        android:background="?attr/selectableItemBackground"
        android:text="@string/text_start_game"
        android:textAllCaps="false" />

</LinearLayout>