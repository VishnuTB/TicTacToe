<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyleWhite">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStyleBlack">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyleTitleWhite" parent="TextStyleWhite">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/spacingMedium</item>
        <item name="android:paddingEnd">@dimen/spacingMedium</item>
        <item name="android:paddingTop">@dimen/spacingSmall</item>
        <item name="android:paddingBottom">@dimen/spacingSmall</item>
    </style>

    <style name="TextStyleSubTitleWhite" parent="TextStyleWhite">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:paddingStart">@dimen/spacingMedium</item>
        <item name="android:paddingEnd">@dimen/spacingMedium</item>
    </style>

    <style name="TextStyleTitleBlack" parent="TextStyleBlack">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/spacingMedium</item>
        <item name="android:paddingEnd">@dimen/spacingMedium</item>
        <item name="android:paddingTop">@dimen/spacingSmall</item>
        <item name="android:paddingBottom">@dimen/spacingSmall</item>
    </style>

    <style name="TextStyleSubTitleBlack" parent="TextStyleBlack">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:paddingStart">@dimen/spacingMedium</item>
        <item name="android:paddingEnd">@dimen/spacingMedium</item>
    </style>

    <style name="ButtonStyleNormal" parent="TextStyleBlack">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>